<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AfterLogIn">

    <TextView
        android:id="@+id/newTextView"
        android:layout_width="360dp"
        android:layout_height="42dp"
        android:letterSpacing="0.05"
        android:paddingLeft="20dp"
        android:text="New Case"
        android:textColor="@color/black"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129" />

    <LinearLayout
        android:id="@+id/linearNew"
        android:layout_width="360dp"
        android:layout_height="480dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/newTextView">

        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:layout_gravity="left"
            android:text="Name"/>

        <TextView
            android:id="@+id/caseName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@drawable/name_and_phone_text_view"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_gravity="left"
            android:text="Phone"/>

        <TextView
            android:id="@+id/casePhone"
            android:padding="10dp"
            android:background="@drawable/name_and_phone_text_view"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_width="300dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_gravity="left"
            android:text="Additional Information"/>

        <TextView
            android:id="@+id/caseDetails"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:background="@drawable/additional_information_text_view"
            android:layout_width="300dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/isPatientTextView"
            android:layout_width="300dp"
            android:textAlignment="center"
            android:layout_height="30dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/is_patient_text_view"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/mapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="110dp"
                android:text="Map"
                android:theme="@style/Button.orange"
                android:visibility="invisible" />

            <Button
                android:id="@+id/acceptButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:text="Accept"
                android:theme="@style/Button.orange"
                android:visibility="invisible" />

            <Button
                android:id="@+id/endButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="End"
                android:theme="@style/Button.orange"
                android:visibility="invisible" />

        </FrameLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/logOutButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/historyButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/history"
        app:layout_constraintEnd_toStartOf="@+id/logOutButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
